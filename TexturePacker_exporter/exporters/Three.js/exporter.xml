<exporter version="1.0">
    <!-- identifier of the exporter -->
    <name>Three.js</name>

    <!-- display name of the exporter for the combo box -->
    <displayName>Three.js</displayName>
	
    <!-- description of the exporter -->
    <description>Three.js</description>

    <!-- exporter version -->
    <version>1.0</version>



    <defaults>
        <extrude>2</extrude>
        <shapePadding>0</shapePadding>
        <borderPadding>0</borderPadding>
        <trimMode>None</trimMode>               <!-- None, Trim, Crop, CropKeepPos, Polygon -->
        <sizeConstraints>POT</sizeConstraints>     <!-- POT, WordAligned, AnySize -->
        <writePivotPoints>true</writePivotPoints>  <!-- true, false -->
        <defaultPivotPoint>0.0,0.0</defaultPivotPoint>
    </defaults>

	
    <!-- currently only one file allowed - more to come with update -->
    <files>
        <file>
            <!-- name of this file variable -->
            <name>js</name>

            <!-- human readable name (for GUI) -->
            <displayName>Three.js</displayName>

            <!-- file extension for the file -->
            <fileExtension>js</fileExtension>

            <!-- description what the file contains, used in tooltips in the GUI -->
            <description>Three.js</description>

            <!-- name of the template file -->
            <template>Three.js</template>
        </file>
    </files>

    <!-- target framework supports trimming -->
    <supportsTrimming>no</supportsTrimming>
    
    <!-- target framework supports rotation -->
    <supportsRotation>no</supportsRotation>
    
    <!-- rotated sprites direction (cw/ccw) -->
    <rotationDirection>cw</rotationDirection>

    <!-- supports npot sizes -->
    <supportsNPOT>true</supportsNPOT>

    <!-- supports file name stripping (remove .png etc) -->
    <supportsTrimSpriteNames>no</supportsTrimSpriteNames>

    <!-- supports texure subpath -->
    <supportsTextureSubPath>yes</supportsTextureSubPath>

</exporter>
